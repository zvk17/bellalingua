<main class="container z-depth-2">

<div id="list">
    <div class="row">
        <div class="col s12">

            <div class="row">
                <div class="col s12">
                    <h1 class="center-align">{{title}}</h1>
                </div>
            </div>

            <div class="row">
            {{#each list}}
                <div class="col l4 m6 s12">
                    <div class="card z-depth-3">
                        {{#if image}}
                        <div class="card-image">
                            <img src="{{image}}">
                        </div>
                        {{/if}}
                        <div class="card-content">
                            <span class="card-title">{{title}}</span>
                            {{#if description}}
                                <p>{{description}}</p>
                            {{/if}}
                        </div>
                        <div class="card-action">
                            <a class="btn waves-effect waves-light btn-block" href="{{href}}">
                            Otvori
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
            {{#if description}}                
                <div class="row">
                    <div class="col s12 description">
                        {{{description}}}
                    </div>
                </div>
            {{/if}}

        </div>
    </div>
</div>

</main>
